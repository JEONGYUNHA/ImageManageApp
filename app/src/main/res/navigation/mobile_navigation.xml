<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_image">

    <fragment
        android:id="@+id/nav_image"
        android:name="com.example.imagemanageapp.ui.image.ImageFragment"
        android:label="@string/menu_image"
        tools:layout="@layout/fragment_image" />
    <fragment
        android:id="@+id/nav_album"
        android:name="com.example.imagemanageapp.ui.album.AlbumFragment"
        android:label="@string/menu_album"
        tools:layout="@layout/fragment_album" />
    <activity
        android:id="@+id/nav_recommend"
        android:name="com.example.imagemanageapp.ui.recommend.RecommendActivity"
        android:label="@string/menu_recommend"
        tools:layout="@layout/activity_recommand" />

    <fragment
        android:id="@+id/nav_mypage"
        android:name="com.example.imagemanageapp.ui.mypage.MypageFragment"
        android:label="@string/menu_mypage"
        tools:layout="@layout/fragment_mypage" />

    <fragment
        android:id="@+id/nav_trash"
        android:name="com.example.imagemanageapp.ui.trash.TrashFragment"
        android:label="@string/menu_trash"
        tools:layout="@layout/fragment_trash" />
</navigation>